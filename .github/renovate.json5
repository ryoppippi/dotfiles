{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "labels": [
    "dependencies",
    "renovate"
  ],
  "platformAutomerge": true,
  "dependencyDashboard": false,
  "automerge": true,
  "branchConcurrentLimit": 0,
  "minimumReleaseAge": "3 days",
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "ai-tools"
      ],
      "matchDatasources": [
        "git-refs"
      ],
      "minimumReleaseAge": null
    },
    {
      "matchPackageNames": [
        "claude-code-overlay"
      ],
      "matchDatasources": [
        "git-refs"
      ],
      "minimumReleaseAge": null,
      "schedule": ["* * * * *"]
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchDatasources": [
        "node-version"
      ],
      "allowedVersions": "/^([2-9]\\d*[02468])(\\.\\d+)*$/"
    },
    {
      "description": "NeoVim Node.js dependencies managed by node2nix",
      "matchFileNames": ["nix/node2nix/package.json"],
      "postUpgradeTasks": {
        "commands": [
          "cd nix/node2nix && npm install --package-lock-only --lockfile-version=2",
          "cd nix/node2nix && nix run nixpkgs#node2nix -- -l package-lock.json"
        ],
        "fileFilters": [
          "nix/node2nix/package-lock.json",
          "nix/node2nix/node-packages.nix",
          "nix/node2nix/node-env.nix",
          "nix/node2nix/default.nix"
        ],
        "executionMode": "update"
      }
    }
  ]
}
