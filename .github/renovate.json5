{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "labels": [
    "dependencies",
    "renovate"
  ],
  "platformAutomerge": true,
  "dependencyDashboard": false,
  "automerge": true,
  "branchConcurrentLimit": 0,
  "minimumReleaseAge": "3 days",
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "ai-tools"
      ],
      "matchDatasources": [
        "git-refs"
      ],
      "minimumReleaseAge": null
    },
    {
      "matchPackageNames": [
        "claude-code-overlay"
      ],
      "matchDatasources": [
        "git-refs"
      ],
      "minimumReleaseAge": null,
      "schedule": ["* * * * *"]
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchDatasources": [
        "node-version"
      ],
      "allowedVersions": "/^([2-9]\\d*[02468])(\\.\\d+)*$/"
    }
  ]
}
