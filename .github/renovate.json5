{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "extends": [
    "github>aquaproj/aqua-renovate-config#2.9.0"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "platformAutomerge": true,
  "dependencyDashboard": false,
  "automerge": true,
  "branchConcurrentLimit": 0,
  "minimumReleaseAge": "3 days",
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "opencode",
        "codex",
        "bun",
        "deno"
      ],
      "stabilityDays": 0
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchDatasources": [
        "node"
      ],
      "allowedVersions": "/^([2-9]\\d*[02468])(\\.\\d+)*$/"
    }
  ]
}
